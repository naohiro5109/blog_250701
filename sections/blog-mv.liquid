    <img src="{{ section.settings.mv_image | img_url: 'master' }}" alt="" width="1200px" height="auto">
  {% endif %}
</div>

<style>
  .p-mv {
    display: flex;
    justify-content: center;
  }
</style>

{% schema %}
{
  "name": "メインビジュアル",
  "settings": [
    {
      "type": "image_picker",
      "id": "mv_image",
      "label": "画像を選択"
    }
  ],
  "presets": [
    {
      "name": "メインビジュアル",
      "category": "カスタム"
    }
  ]
}
{% endschema %}