<div class="p-mv c-margin">
  {% if section.settings.mv_image %}
    <img
      src="{{ section.settings.mv_image | img_url: '1200x' }}"
      alt="メインビジュアル"
      width="100%"
      height="auto"
      loading="lazy"
      class="p-mv__image"
    >
  {% endif %}
</div>

<style>
  .p-mv {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .p-mv__image {
    display: block;
    max-width: 100%;
    height: auto;
  }
</style>

{% schema %}
{
  "name": "メインビジュアル",
  "settings": [
    {
      "type": "image_picker",
      "id": "mv_image",
      "label": "画像を選択"
    }
  ],
  "presets": [
    {
      "name": "メインビジュアル",
      "category": "カスタム"
    }
  ]
}
{% endschema %}