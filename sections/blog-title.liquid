<div class="p-title c-margin">
  {% if section.settings.blog_title %}
    <h1 class="c-headings1">{{ section.settings.blog_title }}</h1>
  {% endif %}
  {% if section.settings.blog_text %}
    <p>{{ section.settings.blog_text }}</p>
  {% endif %}
</div>

<style>
  .c-headings1 {
    text-align: center;
  }
  .p-title {
    margin-left: auto;
    margin-right: auto;
    max-width: 1000px;
  }
</style>

{% schema %}
  {
    "name": "ブログタイトル",
    "settings": [
      {
        "type": "text",
        "id": "blog_title",
        "label": "タイトル",
      },
      {
        "type": "text",
        "id": "blog_text",
        "label": "テキスト"
      }
    ],
    "presets": [
      {
        "name": "ブログタイトル",
        "category": "カスタム"
      }
    ]
  }
{% endschema %}